<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulaire commande d'achat -->
   <record id="view_purchase_order_form_custom_category" model="ir.ui.view">
        <field name="name">purchase.order.form.custom.category</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="purchase_category"/>
            </xpath>
        </field>
    </record>

    <!-- Liste -->
    <record id="view_purchase_order_tree_custom_category" model="ir.ui.view">
        <field name="name">purchase.order.tree.custom.category</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="purchase_category"/>
            </xpath>
        </field>
    </record>
<record id="view_purchase_order_kanban_custom_pipeline" model="ir.ui.view">
        <field name="name">purchase.order.kanban.custom.pipeline</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_kanban"/>
        <field name="arch" type="xml">
            <!-- Ajouter le champ process_status dans la carte Kanban -->
           <xpath expr="//kanban" position="inside">
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <field name="purchase_category"/>
                        </div>
                    </t>
                </templates>
            </xpath>

            <!-- Grouper par dÃ©faut par process_status -->
            <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">purchase_category</attribute>
            </xpath>
        </field>
    </record>
