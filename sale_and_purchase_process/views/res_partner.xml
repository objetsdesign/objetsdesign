<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_commerciaux" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.commerciaux</field>
    <field name="model">res.partner</field>
    <!-- HÃ©ritage de la vraie vue formulaire du partenaire -->
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <!-- On cible le notebook existant et on ajoute Ã  l'intÃ©rieur -->
       <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/kanban/templates/t[@t-name='card']/main" position="inside">
    <div class="mt-1">
        <field name="is_commercial" widget="boolean_toggle"/>
    </div>
</xpath>


        <xpath expr="//notebook" position="inside">
    <page string="Commerciaux">
        <field name="commercial_ids" context="{'default_parent_id': id}">
            <list editable="bottom">
                <field name="contact_name"/>
                <field name="function"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
            <form>
                <group>
                    <field name="contact_name"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="email"/>
                </group>
            </form>
        </field>
    </page>
</xpath>


    </field>
</record>

